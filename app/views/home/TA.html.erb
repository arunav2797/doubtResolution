        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <%= link_to "Solve Doubt", home_path, class: "nav-link" %>
            </li>
        </ul>
        <%= button_to 'Logout', logout_path, method: :delete, class: "btn btn-outline-success my-2 my-sm-0" %>
