<div class="container mt-3">
    <h1> Dashboard </h1>
    <div class="row text-center">
        <div class="card col m-3">
            <div class="card-body">
                <h1><%= @no_of_doubts %></h1>
                <p>Doubts</p>
            </div>
        </div>
        <div class="card col m-3">
            <div class="card-body">
                <h1><%= @no_of_resolved_doubts %></h1>
                <p>Doubts Resolved</p>
            </div>
        </div>
        <div class="card col m-3">
            <div class="card-body">
                <h1><%= @no_of_doubts_escalated %></h1>
                <p>Doubts Escalated</p>
            </div>
        </div>
        <div class="card col m-3">
            <div class="card-body">
                <% @total = 0%>
                <% Doubt.where(status: "Resolved").each do |time| %>
                <% @total = @total + ((time.updated_at - time.accepted_at) / 1.minute).round %>
                <%end%>
                <h1><%= @total/Doubt.where(status: "Resolved").count %></h1>
                <p>Average resolution time</p>
            </div>
        </div>
    </div>
    <div class="card mt-3">
        <div class="card-header">
            <h3 class="mb-4">TA Report</h3>
            <% @ta.each do |ta| %>
            <div class="card mb-2">
                <div class="card-body">
                    <div class="col-12"><%= ta.email %></div>
                    <div class="row col-12 mt-2">
                        <div class="col">Doubts Accepted: <%= TaDoubt.where(user_id: ta.id).count %></div>
                        <div class="col">Doubts Resolved: <%= Doubt.joins(:TaDoubt).where(doubts: {status: "Resolved"}, TaDoubt: {user_id: ta.id}).count %></div>
                        <div class="col">Doubts Escalated: <%= TaDoubt.where(user_id: ta.id).count - Doubt.joins(:TaDoubt).where(doubts: {status: "Resolved"}, TaDoubt: {user_id: ta.id}).count %></div>
                        <% @total = 0%>
                        <% Doubt.joins(:TaDoubt).where(doubts: {status: "Resolved"}, TaDoubt: {user_id: ta.id}).each do |time| %>
                        <% @total = @total + ((time.updated_at - time.accepted_at) / 1.minute).round %>
                        <%end%>
                        <div class="col">Average resolution time: <%= @total/Doubt.joins(:TaDoubt).where(doubts: {status: "Resolved"}, TaDoubt: {user_id: ta.id}).count %></div>
                    </div>
                </div>
            </div>
            <%end%>
        </div>
    </div>
</div>