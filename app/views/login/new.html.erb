<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>

<body class="text-center" data-new-gr-c-s-check-loaded="14.989.0" data-gr-ext-installed="">
    <%= form_with url: sign_in_path, :html => {:class => "form-signin"} do |f| %>
    <form class="form-signin">
        <img class="mb-4" src="https://www.codingninjas.com/assets-landing/images/CNLOGO.svg" alt="" width="90" height="90">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <div class="alert-warning mb-2"><%= notice %></div>
        <div class="alert-danger mb-2"><%= alert %></div>
        <%= f.text_field :email, id: 'email', class: 'form-control', placeholder: 'Email address', required:'' %>
        <%= f.password_field :password, id: 'password', class: 'form-control', placeholder: 'Password', required:'' %>
        <%= f.submit 'Sign in', class: 'tn btn-lg btn-primary btn-block' %>
        <p class="mt-5 mb-3 text-muted">Â© Coding Ninjas</p>
    </form>
    <%end%>
    <%= yield %>
</body>
<style>
html,
body {
  height: 100%;
}

body {
  display: -ms-flexbox;
  display: -webkit-box;
  display: flex;
  -ms-flex-align: center;
  -ms-flex-pack: center;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-pack: center;
  justify-content: center;
  padding-top: 40px;
  padding-bottom: 40px;
  background-color: #f5f5f5;
}

.form-signin {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: 0 auto;
}
.form-signin .checkbox {
  font-weight: 400;
}
.form-signin .form-control {
  position: relative;
  box-sizing: border-box;
  height: auto;
  padding: 10px;
  font-size: 16px;
}
.form-signin .form-control:focus {
  z-index: 2;
}
.form-signin input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.form-signin input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

</style>
</html>