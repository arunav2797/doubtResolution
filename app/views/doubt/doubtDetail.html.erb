<div class="container mt-3">
    <h2> Home </h2>
    <div class="alert-warning mt-2 mb-2"><%= notice %></div>
    <div class="alert-danger mt-2 mb-2"><%= alert %></div>
    <div class="row col-12">
        <div class="col-7">
            <div class="card mt-3">
                <div class="card-header">
                    <h5><%= @doubt.title%></h5>
                    <h6><%= @doubt.description%></h6>
                    <p class="mt-4"><small>Asked by: <%=User.find(Doubt.where(id: @doubt.id).pluck(:user_id)).pluck(:email).first%> on <%=@doubt.created_at.in_time_zone('Asia/Kolkata').strftime("%d %b, %y at %I : %M %p")%></small></p>
                </div>
                <br>
                <h6 class="col-12"><%=doubt.comments.count%> comments</h6>
                <div class="card-body">
                    <% @doubt.comments.each do |comment| %>
                    <div class="card">
                        <div class="card-body">
                            <h6><%= comment.email%> : <%= comment.comment%></h6>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="col-5">
            <div class="card mt-3">
                <div class="card-body">
                    <h6>Answer</h6>
                    <%= form_with url: answerDoubt_path, :html => {:class => "form-signin"} do |f| %>
                        <%= f.text_area :solution, id: 'solution', class: 'form-control', placeholder: 'Solution' %>
                        <%= f.hidden_field :doubt_id, value: @doubt.id %>
                    <div class="row col-12">
                        <%= f.submit 'Submit', class: 'tn btn-sm btn-primary btn-block col m-2' %>
                        <% end %>
                        <% if TaDoubt.where(doubt_id: @doubt.id, status: "Escalated").count < 1 %>
                        <%= form_with url: escalateDoubt_path, :html => {:class => "form-signin col m-2"} do |f| %>
                        <%= f.hidden_field :doubt_id, value: @doubt.id %>
                        <%= f.submit 'Escalate', class: 'tn btn-sm btn-primary btn-block col-12' %>
                        <% end %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>